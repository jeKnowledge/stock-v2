  <div class="container">
    <%= link_to "stock app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if admin_user? && User.count > 1%>
            <li><%= link_to "Users", users_path %></li>
          <% end %>
          <% if admin_user? %>
            <li><%= link_to "New Item", '/new_item'%></li>
          <% end %>
          <% if user_items? %>
            <li><%= link_to "Your Itens", '/your_items' %></li>
          <% end %>
          <% if available_items %>
            <li><%= link_to "Itens available", '/items_available' %></li>
          <% end %>
          <% if not_available_items %>
            <li><%= link_to "Itens not available", '/items_not_available' %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Logout", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Sign up', signup_path  %></li>
        <% end %>
      </ul>
    </li>
  </nav>
</div>
