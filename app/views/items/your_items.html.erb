<% provide(:title, 'All Itens') %>

<ul class="items">

  <h1>Your itens</h1>
  <% @non_repetetive_items.each do |item, quantity| %>
    <% if item.state && (@cuser_id == item.user_id)%>
      <li>
        &nbsp; <%= item.name %>
      <% if @cuser_admin %>
        <div  style="display:inline-block;" class="items_display">
          <%= button_to "Delete", setup_delete_item_path(item.id), class: "btn btn-primary", method: :delete %>
        </div>
      <% end %>
      <div  style="display:inline-block;" class="items_display">
        <%= button_to "Return", setup_return_item_path(item.id), class: "btn btn-primary", method: :get %>
      </div>
      <br>
      &nbsp; Quantity - <%= quantity %>
    <br>
    &nbsp; Date - <%= item.deadline.strftime("%d %B %Y %H:%M") %>
  </li>
<% end %>
<% end %>
</ul>
