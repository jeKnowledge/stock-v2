<% provide(:title, 'Destroy Itens') %>
<h1>Destroy Itens</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item, url: delete_item_path, html: {method: "delete"}) do |f| %>
      <%= f.label :amount %>
      <%= f.number_field :amount, class: 'form-control' %>
      <br>

      <%= f.submit "Delete Itens", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
